local button = script.Parent:WaitForChild("HoldButton")
local ageLabel = script.Parent:WaitForChild("AgeLabel")
local loadingFrame = script.Parent:WaitForChild("LoadingFrame")
local percentText = loadingFrame:WaitForChild("Percent")

local holding = false
local maxAge = 50

-- Get current age from text (e.g., "Age: 12")
local function getAge()
	local number = tonumber(ageLabel.Text:match("%d+"))
	return number or 3
end

-- Update age visually
local function setAge(newAge)
	ageLabel.Text = "Age: " .. newAge
end

-- Age up logic
local function ageUp()
	while holding do
		local currentAge = getAge()
		if currentAge < maxAge then
			currentAge += 1
			setAge(currentAge)
		else
			break
		end
		wait(0.1) -- speed of aging (hold duration)
	end

	if getAge() >= maxAge then
		-- Show loading screen after age 50
		loadingFrame.Visible = true
		for i = 0, 100, 1 do
			percentText.Text = i .. "%"
			wait(0.03)
		end
	end
end

-- Button press detection
button.MouseButton1Down:Connect(function()
	holding = true
	ageUp()
end)

button.MouseButton1Up:Connect(function()
	holding = false
end)
