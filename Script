-- GUI references
local button = script.Parent:WaitForChild("HoldButton")
local ageLabel = script.Parent:WaitForChild("AgeLabel")
local loadingFrame = script.Parent:WaitForChild("LoadingFrame")
local percentText = loadingFrame:WaitForChild("Percent")

-- Variables
local holding = false
local maxAge = 50
local currentAge = 0
local waitTimePerAge = 6 -- 300 sec / 50 ages = 6 sec per age

-- Initial UI setup
loadingFrame.Visible = false
ageLabel.Text = "" -- No starting age shown

-- Function to update age text
local function setAge(newAge)
	ageLabel.Text = "Age: " .. newAge
end

-- Function to simulate aging while holding button
local function ageUp()
	while holding and currentAge < maxAge do
		currentAge += 1
		setAge(currentAge)
		wait(waitTimePerAge)
	end

	-- Once pet reaches age 50, show loading
	if currentAge >= maxAge then
		loadingFrame.Visible = true
		for i = 0, 100 do
			percentText.Text = i .. "%"
			wait(0.03)
		end
		percentText.Text = "Done 100% âœ…"
	end
end

-- Button press starts holding
button.MouseButton1Down:Connect(function()
	if not holding and currentAge < maxAge then
		holding = true
		ageUp()
	end
end)

-- Button release stops holding
button.MouseButton1Up:Connect(function()
	holding = false
end)
