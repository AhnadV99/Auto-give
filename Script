-- üß† Pet Aging System by Zeetuan
-- üß† This script handles automatic pet aging when a player holds any pet.
-- üß† The UI displays name, weight, age, and a "Made by Zeetuan" tag.
-- üß† The aging works by checking if the pet has an IntValue named "Age".
-- üß† Once the player touches the button, the aging starts forever.

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- üñºÔ∏è Create Screen UI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetAgingUI"
screenGui.Parent = player:WaitForChild("PlayerGui")

-- üì¶ Main Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 180)
frame.Position = UDim2.new(0.5, -150, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.BackgroundTransparency = 0.2
frame.Parent = screenGui

-- üè∑Ô∏è Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Text = "Pet Info"
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.Parent = frame

-- üìã Pet Name
local nameLabel = Instance.new("TextLabel")
nameLabel.Size = UDim2.new(1, -20, 0, 30)
nameLabel.Position = UDim2.new(0, 10, 0, 40)
nameLabel.BackgroundTransparency = 1
nameLabel.TextColor3 = Color3.new(1, 1, 1)
nameLabel.Text = "Pet: None"
nameLabel.Font = Enum.Font.Gotham
nameLabel.TextSize = 18
nameLabel.TextXAlignment = Enum.TextXAlignment.Left
nameLabel.Parent = frame

-- ‚öñÔ∏è Weight
local weightLabel = Instance.new("TextLabel")
weightLabel.Size = UDim2.new(1, -20, 0, 30)
weightLabel.Position = UDim2.new(0, 10, 0, 70)
weightLabel.BackgroundTransparency = 1
weightLabel.TextColor3 = Color3.new(1, 1, 1)
weightLabel.Text = "Weight: 0kg"
weightLabel.Font = Enum.Font.Gotham
weightLabel.TextSize = 18
weightLabel.TextXAlignment = Enum.TextXAlignment.Left
weightLabel.Parent = frame

-- ‚è≥ Age
local ageLabel = Instance.new("TextLabel")
ageLabel.Size = UDim2.new(1, -20, 0, 30)
ageLabel.Position = UDim2.new(0, 10, 0, 100)
ageLabel.BackgroundTransparency = 1
ageLabel.TextColor3 = Color3.new(1, 1, 1)
ageLabel.Text = "Age: 0"
ageLabel.Font = Enum.Font.Gotham
ageLabel.TextSize = 18
ageLabel.TextXAlignment = Enum.TextXAlignment.Left
ageLabel.Parent = frame

-- ‚úçÔ∏è Credit
local creditLabel = Instance.new("TextLabel")
creditLabel.Size = UDim2.new(1, 0, 0, 20)
creditLabel.Position = UDim2.new(0, 0, 1, -20)
creditLabel.BackgroundTransparency = 1
creditLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
creditLabel.Text = "Made by Zeetuan"
creditLabel.Font = Enum.Font.GothamItalic
creditLabel.TextSize = 14
creditLabel.TextXAlignment = Enum.TextXAlignment.Center
creditLabel.Parent = frame

-- üîò Start Button
local startButton = Instance.new("TextButton")
startButton.Size = UDim2.new(1, -40, 0, 40)
startButton.Position = UDim2.new(0, 20, 1, -70)
startButton.Text = "Start Aging"
startButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
startButton.TextColor3 = Color3.new(1, 1, 1)
startButton.Font = Enum.Font.GothamBold
startButton.TextSize = 20
startButton.Parent = frame

-- üîÑ Variables
local aging = false
local currentPet = nil

-- üîç Get Held Tool
local function getHeldPet()
	local tool = player.Character and player.Character:FindFirstChildOfClass("Tool")
	if tool then
		local ageVal = tool:FindFirstChild("Age")
		local weightVal = tool:FindFirstChild("Weight")
		if ageVal and weightVal then
			return tool
		end
	end
	return nil
end

-- üîÅ Aging Loop
local function startAging()
	if aging then return end
	aging = true
	while aging do
		currentPet = getHeldPet()
		if currentPet then
			local petName = currentPet.Name or "Unknown"
			local ageVal = currentPet:FindFirstChild("Age")
			local weightVal = currentPet:FindFirstChild("Weight")

			if ageVal and typeof(ageVal.Value) == "number" then
				ageVal.Value = ageVal.Value + 1
				-- üìù Update UI
				nameLabel.Text = "Pet: " .. petName
				weightLabel.Text = "Weight: " .. tostring(weightVal.Value) .. "kg"
				ageLabel.Text = "Age: " .. tostring(ageVal.Value)
			else
				nameLabel.Text = "Pet: Invalid"
				weightLabel.Text = "Weight: N/A"
				ageLabel.Text = "Age: N/A"
			end
		else
			nameLabel.Text = "Pet: None"
			weightLabel.Text = "Weight: 0kg"
			ageLabel.Text = "Age: 0"
		end
		wait(1)
	end
end

-- üõë Stop aging if needed
local function stopAging()
	aging = false
end

-- üß† Button Touch Handler
startButton.MouseButton1Click:Connect(function()
	startAging()
end)

-- üßº Optional: Reset on death
player.CharacterAdded:Connect(function()
	stopAging()
end)
