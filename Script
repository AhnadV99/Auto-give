-- Pet Age Visual Level-Up Script
-- Visually levels up pet from current age to Age: 50
-- For Zeetuan ðŸ’€ðŸ’ª

-- Settings
local startingAge = 3   -- You can change this to any starting age
local finalAge = 50     -- Target age

-- Function to find GUI elements
local function findAgeAndProgress()
    local ageLabel = nil
    local percentLabel = nil
    local progressBar = nil

    for _, v in pairs(game:GetDescendants()) do
        if v:IsA("TextLabel") then
            if v.Text:find("Age:") then ageLabel = v end
            if v.Text:find("%%") then percentLabel = v end
        elseif v:IsA("Frame") and v.Name:lower():find("progress") then
            progressBar = v
        end
    end

    return ageLabel, percentLabel, progressBar
end

-- Fake level-up function
local function levelUpPet()
    local ageLabel, percentLabel, progressBar = findAgeAndProgress()
    if not ageLabel then return end

    for age = startingAge, finalAge do
        -- Update Age text
        ageLabel.Text = "Age: " .. age

        -- Animate progress bar from 0% to 100%
        for i = 0, 100, 5 do
            if percentLabel then percentLabel.Text = i .. "%" end
            if progressBar then
                progressBar.Size = UDim2.new(i/100, 0, progressBar.Size.Y.Scale, 0)
            end
            wait(0.05)
        end

        wait(0.3) -- Short pause before next age
    end
end

-- Run it
levelUpPet()
