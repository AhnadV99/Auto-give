-- Place this LocalScript inside StarterPlayerScripts or StarterGui

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetAgeGui"
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Create the button
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 200, 0, 50)
button.Position = UDim2.new(0.5, -100, 0.8, 0)
button.Text = "Age to 50"
button.Parent = screenGui
button.Font = Enum.Font.SourceSansBold
button.TextSize = 24
button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
button.TextColor3 = Color3.new(1, 1, 1)

-- Create loading text
local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(0, 200, 0, 30)
loadingText.Position = UDim2.new(0.5, -100, 0.88, 0)
loadingText.Text = ""
loadingText.Parent = screenGui
loadingText.Font = Enum.Font.SourceSans
loadingText.TextSize = 18
loadingText.BackgroundTransparency = 1
loadingText.TextColor3 = Color3.new(1, 1, 1)

-- Function to find held pet
local function getHeldPet()
    -- Check all Tools in character (usually held items are Tools)
    for _, tool in pairs(character:GetChildren()) do
        if tool:IsA("Tool") then
            -- Assuming the Tool is a pet, return it
            return tool
        end
    end
    return nil
end

-- Function to set pet age
local function setPetAge(pet, age)
    -- Assuming pet has a NumberValue named "Age" or a similar property
    local ageValue = pet:FindFirstChild("Age")
    if ageValue and ageValue:IsA("NumberValue") then
        ageValue.Value = age
    else
        -- Or try setting an Attribute if used
        if pet:GetAttribute("Age") ~= nil then
            pet:SetAttribute("Age", age)
        else
            -- If nothing found, just print warning
            warn("Pet has no 'Age' NumberValue or attribute.")
        end
    end
end

-- When button clicked
button.MouseButton1Click:Connect(function()
    local pet = getHeldPet()
    if not pet then
        loadingText.Text = "No pet held!"
        return
    end
    
    loadingText.Text = "Aging pet..."
    button.Active = false
    button.AutoButtonColor = false
    button.BackgroundColor3 = Color3.fromRGB(100, 100, 100)

    local totalTime = 300 -- 5 minutes in seconds
    local elapsed = 0
    local increment = 1 -- update every 1 second

    -- Update loop for loading percent
    while elapsed < totalTime do
        wait(increment)
        elapsed = elapsed + increment
        local percent = math.floor((elapsed / totalTime) * 100)
        loadingText.Text = "Loading: " .. percent .. "%"
    end

    -- After loading, set age to 50
    setPetAge(pet, 50)
    loadingText.Text = "Pet aged to 50!"

    -- Reset button
    wait(3)
    loadingText.Text = ""
    button.Active = true
    button.AutoButtonColor = true
    button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
end)
