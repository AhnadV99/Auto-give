-- Services
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Player = Players.LocalPlayer
local Character = Player.Character or Player.CharacterAdded:Wait()
local RunService = game:GetService("RunService")

-- UI Setup
local ScreenGui = Instance.new("ScreenGui", Player:WaitForChild("PlayerGui"))
local Frame = Instance.new("Frame", ScreenGui)
local PetInfo = Instance.new("TextLabel", Frame)
local AgeButton = Instance.new("TextButton", Frame)
local Credit = Instance.new("TextLabel", Frame)

ScreenGui.Name = "ZeetuanPetESP"
Frame.Size = UDim2.new(0, 300, 0, 150)
Frame.Position = UDim2.new(0.5, -150, 0.7, 0)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.BackgroundTransparency = 0.3
Frame.BorderSizePixel = 0

PetInfo.Size = UDim2.new(1, 0, 0.5, 0)
PetInfo.Position = UDim2.new(0, 0, 0, 0)
PetInfo.TextScaled = true
PetInfo.TextColor3 = Color3.new(1, 1, 1)
PetInfo.BackgroundTransparency = 1
PetInfo.Text = "No pet held"

AgeButton.Size = UDim2.new(1, 0, 0.25, 0)
AgeButton.Position = UDim2.new(0, 0, 0.5, 0)
AgeButton.Text = "Age Pet"
AgeButton.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
AgeButton.TextColor3 = Color3.new(1, 1, 1)
AgeButton.TextScaled = true

Credit.Size = UDim2.new(1, 0, 0.25, 0)
Credit.Position = UDim2.new(0, 0, 0.75, 0)
Credit.Text = "Made by Zeetuan"
Credit.TextColor3 = Color3.fromRGB(255, 255, 255)
Credit.TextScaled = true
Credit.BackgroundTransparency = 1

-- Track Held Pet
local heldPet = nil
local function getHeldPet()
	for _, item in ipairs(Character:GetChildren()) do
		if item:FindFirstChild("PetData") then
			return item
		end
	end
	return nil
end

-- Aging Logic
local function increaseAge(pet)
	if not pet then return end
	local petData = pet:FindFirstChild("PetData")
	if petData and petData:FindFirstChild("Age") then
		petData.Age.Value = petData.Age.Value + 1
	end
end

-- Button Click
AgeButton.MouseButton1Click:Connect(function()
	local pet = getHeldPet()
	if pet then
		increaseAge(pet)
	end
end)

-- Update UI Every Frame
RunService.RenderStepped:Connect(function()
	heldPet = getHeldPet()
	if heldPet and heldPet:FindFirstChild("PetData") then
		local petData = heldPet.PetData
		local weight = petData:FindFirstChild("Weight") and petData.Weight.Value or "N/A"
		local age = petData:FindFirstChild("Age") and petData.Age.Value or "N/A"
		local name = heldPet.Name
		PetInfo.Text = name .. "\n[" .. tostring(weight) .. " kg]  [Age: " .. tostring(age) .. "]"
	else
		PetInfo.Text = "No pet held"
	end
end)
