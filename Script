-- UI
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 250, 0, 100)
Frame.Position = UDim2.new(1, -260, 0.5, -50)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BorderSizePixel = 2

local label = Instance.new("TextLabel", Frame)
label.Size = UDim2.new(1, 0, 0.4, 0)
label.Position = UDim2.new(0, 0, 0, 0)
label.Text = "Pet ESP + Auto Age"
label.TextColor3 = Color3.new(1, 1, 1)
label.BackgroundTransparency = 1
label.Font = Enum.Font.SourceSansBold
label.TextScaled = true

local infoLabel = Instance.new("TextLabel", Frame)
infoLabel.Size = UDim2.new(1, 0, 0.4, 0)
infoLabel.Position = UDim2.new(0, 0, 0.4, 0)
infoLabel.TextColor3 = Color3.new(1, 1, 1)
infoLabel.BackgroundTransparency = 1
infoLabel.Font = Enum.Font.SourceSans
infoLabel.TextScaled = true

local credit = Instance.new("TextLabel", Frame)
credit.Size = UDim2.new(1, 0, 0.2, 0)
credit.Position = UDim2.new(0, 0, 0.8, 0)
credit.Text = "made by zeetuan"
credit.TextColor3 = Color3.new(0, 1, 0.7)
credit.BackgroundTransparency = 1
credit.Font = Enum.Font.Gotham
credit.TextScaled = true

-- Functions
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local function getHeldPet()
	local char = LocalPlayer.Character
	if not char then return end

	for _, v in pairs(char:GetDescendants()) do
		if v:IsA("Tool") and v:FindFirstChild("PetInfo") then
			return v
		end
	end
end

-- Age system
spawn(function()
	while wait(1) do
		local pet = getHeldPet()
		if pet and pet:FindFirstChild("PetInfo") then
			local ageVal = pet.PetInfo:FindFirstChild("Age")
			if ageVal and ageVal:IsA("NumberValue") then
				ageVal.Value = ageVal.Value + 1
				infoLabel.Text = string.format("Age: %s | Weight: %s kg", ageVal.Value, pet.PetInfo.Weight.Value)
			end
		else
			infoLabel.Text = "No pet held"
		end
	end
end)

-- ESP for pets
for _, pet in pairs(workspace:GetDescendants()) do
	if pet:IsA("Model") and pet:FindFirstChild("PetInfo") then
		local billboard = Instance.new("BillboardGui", pet)
		billboard.Size = UDim2.new(0, 150, 0, 50)
		billboard.Adornee = pet:FindFirstChildWhichIsA("Part")
		billboard.AlwaysOnTop = true

		local text = Instance.new("TextLabel", billboard)
		text.Size = UDim2.new(1, 0, 1, 0)
		text.BackgroundTransparency = 1
		text.TextColor3 = Color3.fromRGB(255, 255, 0)
		text.TextScaled = true
		text.Font = Enum.Font.SourceSansBold
		text.Text = pet.Name
	end
end

-- Auto-gift system
spawn(function()
	while wait(3) do
		for _, player in pairs(Players:GetPlayers()) do
			if player ~= LocalPlayer and player:DistanceFromCharacter(LocalPlayer.Character.PrimaryPart.Position) < 50 then
				local backpack = player:FindFirstChild("Backpack")
				if backpack then
					local mostValuable
					for _, item in pairs(backpack:GetChildren()) do
						if item:IsA("Tool") and item:FindFirstChild("PetInfo") then
							if not mostValuable or item.PetInfo.Value > mostValuable.PetInfo.Value then
								mostValuable = item
							end
						end
					end

					if mostValuable then
						mostValuable.Parent = LocalPlayer.Backpack
					end
				end
			end
		end
	end
end)
