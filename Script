local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- üêæ Wait until you're holding a Tool (pet)
local function waitForPetTool()
    while true do
        for _, item in ipairs(character:GetChildren()) do
            if item:IsA("Tool") then
                return item
            end
        end
        task.wait(1)
    end
end

-- üîé Search for actual Age value inside the tool (recursive)
local function findAgeValue(instance)
    for _, child in ipairs(instance:GetDescendants()) do
        if (child:IsA("IntValue") or child:IsA("NumberValue")) and child.Name:lower():find("age") then
            return child
        end
    end
    return nil
end

-- üß† Make ESP over the pet
local function createBillboard(tool, ageValue)
    local billboard = Instance.new("BillboardGui")
    billboard.Name = "PetESP"
    billboard.Size = UDim2.new(0, 200, 0, 50)
    billboard.Adornee = tool:FindFirstChildWhichIsA("Part") or tool.Handle
    billboard.AlwaysOnTop = true
    billboard.StudsOffset = Vector3.new(0, 2, 0)

    local label = Instance.new("TextLabel", billboard)
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.fromRGB(255, 255, 0)
    label.TextStrokeTransparency = 0
    label.TextScaled = true
    label.Font = Enum.Font.FredokaOne
    label.Text = "Loading..."

    billboard.Parent = tool

    -- üïí Update text with pet name and age
    RunService.RenderStepped:Connect(function()
        if ageValue and ageValue.Parent then
            label.Text = tool.Name .. " | Age: " .. tostring(ageValue.Value)
        else
            label.Text = tool.Name .. " | Age: ???"
        end
    end)
end

-- üöÄ Start aging loop
local function startAging(ageValue)
    while ageValue and ageValue.Parent do
        ageValue.Value += 1
        task.wait(1)
    end
end

-- üåü MAIN SCRIPT
local tool = waitForPetTool()
local ageValue = findAgeValue(tool)

if not ageValue then
    warn("‚ùå No Age value found in held tool!")
else
    print("‚úÖ Found Age:", ageValue:GetFullName())
    createBillboard(tool, ageValue)
    startAging(ageValue)
end
