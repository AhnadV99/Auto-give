-- LocalScript in StarterGui

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local ui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
ui.Name = "PetAgeUI"

-- Create the button
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 150, 0, 50)
button.Position = UDim2.new(1, -160, 0.5, -25) -- Middle right
button.Text = "Age to 50"
button.BackgroundColor3 = Color3.fromRGB(100, 200, 255)
button.TextColor3 = Color3.new(0, 0, 0)
button.Parent = ui

-- Create loading label
local loadingLabel = Instance.new("TextLabel")
loadingLabel.Size = UDim2.new(0, 150, 0, 30)
loadingLabel.Position = UDim2.new(1, -160, 0.5, 35)
loadingLabel.Text = ""
loadingLabel.TextColor3 = Color3.new(1, 1, 1)
loadingLabel.BackgroundTransparency = 1
loadingLabel.Parent = ui

local function findHeldPet()
	local hand = character:FindFirstChild("RightHand") or character:FindFirstChild("Right Arm")
	if hand then
		for _, child in ipairs(hand:GetChildren()) do
			if child:IsA("Model") or child:IsA("Accessory") then
				if child:FindFirstChild("Age") and child.Age:IsA("NumberValue") then
					return child
				end
			end
		end
	end
	return nil
end

local isAging = false

button.MouseButton1Click:Connect(function()
	if isAging then return end

	local pet = findHeldPet()
	if not pet then
		loadingLabel.Text = "No pet held"
		wait(2)
		loadingLabel.Text = ""
		return
	end

	local ageVal = pet:FindFirstChild("Age")
	if not ageVal then
		loadingLabel.Text = "Pet missing 'Age'"
		wait(2)
		loadingLabel.Text = ""
		return
	end

	isAging = true
	local startAge = ageVal.Value
	local goalAge = 50
	local steps = (goalAge - startAge)
	if steps <= 0 then
		loadingLabel.Text = "Already at 50"
		wait(2)
		loadingLabel.Text = ""
		isAging = false
		return
	end

	local waitTime = 300 / steps  -- 5 minutes to 50
	for i = 1, steps do
		ageVal.Value = ageVal.Value + 1
		local percent = math.floor((i / steps) * 100)
		loadingLabel.Text = "Aging... " .. percent .. "%"
		wait(waitTime)
	end

	loadingLabel.Text = "Done! Age: " .. ageVal.Value
	wait(2)
	loadingLabel.Text = ""
	isAging = false
end)
