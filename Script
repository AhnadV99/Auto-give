-- Pet Visual Level-Up with Hold Button
-- For Zeetuan üêæüî•

local age = 3
local maxAge = 50
local holding = false

-- Replace these with your actual GUI paths
local button = script.Parent:WaitForChild("LevelUpButton") -- A TextButton
local ageLabel = script.Parent:WaitForChild("AgeLabel")    -- TextLabel (e.g., "Age: 3")
local percentLabel = script.Parent:WaitForChild("PercentLabel") -- TextLabel (e.g., "0%")
local progressBar = script.Parent:WaitForChild("ProgressBar")   -- Frame (e.g., green bar)
local loadingScreen = script.Parent:WaitForChild("LoadingFrame") -- Frame to show when done

-- Helper: Animate bar from 0 to 100%
local function animateProgress()
	for i = 0, 100, 5 do
		percentLabel.Text = i .. "%"
		progressBar.Size = UDim2.new(i / 100, 0, progressBar.Size.Y.Scale, 0)
		wait(0.05)
	end
end

-- Level up while holding
local function startLeveling()
	while holding and age < maxAge do
		animateProgress()
		age += 1
		ageLabel.Text = "Age: " .. age
		wait(0.3)
	end

	-- Final Loading Screen
	if age >= maxAge then
		loadingScreen.Visible = true
		loadingScreen:TweenSize(UDim2.new(1, 0, 1, 0), "Out", "Quad", 1)
	end
end

-- Detect holding
button.MouseButton1Down:Connect(function()
	holding = true
	startLeveling()
end)

button.MouseButton1Up:Connect(function()
	holding = false
end)

button.MouseLeave:Connect(function()
	holding = false
end)
