-- Place this LocalScript inside StarterPlayerScripts

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- UI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetGui"
screenGui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 150, 0, 50)
button.Position = UDim2.new(1, -160, 0.5, -25) -- middle right
button.AnchorPoint = Vector2.new(0, 0)
button.Text = "Age to 50"
button.BackgroundColor3 = Color3.fromRGB(255, 170, 0)
button.TextScaled = true
button.Parent = screenGui

local progressLabel = Instance.new("TextLabel")
progressLabel.Size = UDim2.new(0, 150, 0, 30)
progressLabel.Position = UDim2.new(1, -160, 0.5, 30)
progressLabel.AnchorPoint = Vector2.new(0, 0)
progressLabel.Text = ""
progressLabel.TextColor3 = Color3.new(1, 1, 1)
progressLabel.BackgroundTransparency = 1
progressLabel.TextScaled = true
progressLabel.Parent = screenGui

local isAging = false

local function getHeldPetTool()
	for _, item in ipairs(player.Backpack:GetChildren()) do
		if item:IsA("Tool") and item:FindFirstChild("Age") then
			return item
		end
	end
	for _, item in ipairs(character:GetChildren()) do
		if item:IsA("Tool") and item:FindFirstChild("Age") then
			return item
		end
	end
	return nil
end

button.MouseButton1Click:Connect(function()
	if isAging then return end
	
	local petTool = getHeldPetTool()
	if not petTool then
		progressLabel.Text = "❌ No pet held"
		return
	end

	local ageValue = petTool:FindFirstChild("Age")
	if not ageValue or not ageValue:IsA("NumberValue") then
		progressLabel.Text = "❌ No Age data"
		return
	end

	isAging = true
	local startAge = ageValue.Value
	local targetAge = 50
	local totalTime = 300 -- 5 minutes in seconds
	local interval = 1 -- seconds per step
	local steps = math.floor(totalTime / interval)
	local agePerStep = (targetAge - startAge) / steps

	for i = 1, steps do
		if ageValue.Value < targetAge then
			ageValue.Value = ageValue.Value + agePerStep
			local percent = math.floor(((ageValue.Value - startAge) / (targetAge - startAge)) * 100)
			progressLabel.Text = "⏳ Aging: " .. percent .. "%"
		else
			break
		end
		wait(interval)
	end

	ageValue.Value = targetAge
	progressLabel.Text = "✅ Aged to 50!"
	wait(3)
	progressLabel.Text = ""
	isAging = false
end)
